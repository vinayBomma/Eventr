<head>
    <title>Eventr</title>
</head>
{{> _navbar}}

<section>

    <!-------------------------- Floating Button ------------------------------>

    {{> _fab}}

    <!--------------------------- Modal for Adding Card ----------------------------->

    {{> _modalAdd}}

    <!--------------------------- Modal for Deleting Card ---------------------------->

    {{> _modalDelete}}

    <!--------------------------- Cards ----------------------------->

    <div class="row event_card">
        {{#each event}}
            <div class="col s12 m6 l4 xl3 card_details">
                <div class="card blue-grey darken-1 hoverable card_height">
                    <div class="card-content white-text dateCard">
                        <p class="center-align card_date_count">{{date}}</p>
                    </div>
                    <div class="card-content white-text titleCard">
                        <hr class="style14">
                        <p class="center-align card_event_name">{{title}}</p>
                    </div>
                    <div>
                        <form method="post" action="/{{id}}?_method=DELETE">
                            <input type="hidden" name="_method" value="DELETE">
                            <button class="btn modal-trigger" onclick="return confirm('Are You Sure?')" type="submit">
                                <i class="small material-icons">delete</i>
                            </button>
                            <!--<a class="modal-trigger" href="#modal2">-->
                                <!--<i class="small material-icons">delete</i>-->
                            <!--</a>-->
                        </form>
                    </div>
                </div>
            </div>
        {{else}}
            <div class="row center-align">
                <div>
                    <h5>No Events Created Yet</h5>
                </div>
            </div>
        {{/each}}
    </div>
</section>
